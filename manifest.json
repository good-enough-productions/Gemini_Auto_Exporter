{
  "manifest_version": 3,
  "name": "Gemini Auto Exporter",
  "version": "1.0",
  "description": "Automatically exports Gemini chats to Markdown when the tab is closed.",
  "permissions": [
    "downloads",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://gemini.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://gemini.google.com/*"],
      "js": ["content.js"]
    }
  ]
}
